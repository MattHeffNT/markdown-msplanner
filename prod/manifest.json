{
    "name": "MS Planner Markdown Extension",
    "description": "adds markdown to planner",
    "version": "1.0",
    "manifest_version": 2,
 
    "content_scripts": [
        {
            "matches": [
                "https://tasks.office.com/*"  
            ],

            "css": [
                "./planner.css"
            ],

            "js": [
                "./dist/main.js"
            ],

            "run_at": "document_idle"            
        }
    ],

    "icons": {
        "48": "planner48.png",
       "128": "planner128.png" }
  }