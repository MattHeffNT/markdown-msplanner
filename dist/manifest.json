{
    "name": "MS Planner Markdown Extension",
    "description": "adds markdown to planner",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": [
                "https://tasks.office.com/*"  
            ],

            "css": [
                "./planner.css"
            ],

            "js": [
                "./main.js"
            ],

            "run_at": "document_idle"            
        }
    ]
  }
